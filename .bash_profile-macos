# Author: Kevin Hira

# Import common script
[[ -f ~/.bashrc_common ]] && source ~/.bashrc_common

# PATH Setting
PATH="$PATH:/opt/local/bin:/opt/local/sbin" # MacPorts
PATH="$HOME/bin:$PATH" # Custom bin folders
PATH="$PATH:~/Library/Python/3.6/bin"
PATH="$PATH:/System/Library/Frameworks/Python.framework/Versions/2.7/bin"
export PATH

# Profile loading
function reloadprofile {
    source ~/.bash_profile
}

# Visual Studio Code
function vscode {
    ARG="$@"
    if [[ "$ARG" == "" ]]; then
        ARG="."
    fi
    open -a /Applications/Visual\ Studio\ Code.app "$ARG"
}
alias vsc='vscode'

# Better ls
alias lsa='ls -plaTh'
alias ll='lsa'

# Lock shortcut
function lock {
    /System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend
}

# Redirect festival to MacOS say
function festival {
    say
}

# Look at CSR for X509 certs
alias x509look='openssl x509 -noout -text'

# Get CPU Model
alias cpu_model='sysctl -n machdep.cpu.brand_string'

# Open up course folder
function uni {
    cd "`find "/Users/kevin/Google Drive/UoA/SE" -maxdepth 1 -name *"$@"`"
}

export RBENV_ROOT="$HOME/.rbenv"

if [ -d $RBENV_ROOT ]; then
  export PATH="$RBENV_ROOT/bin:$PATH"
  eval "$(rbenv init -)"
fi

test -e "${HOME}/.iterm2_shell_integration.bash" && source "${HOME}/.iterm2_shell_integration.bash"
