# Author: Kevin Hira


# Colours for terminal
export CLICOLOR=1;
export LSCOLORS=GxFxCxDxBxegedabagaced;

# PATH Setting
PATH="$PATH:/opt/local/bin:/opt/local/sbin" # MacPorts
PATH="/Users/kevin/bin:$PATH" # Custom bin folders
PATH="/usr/local/git/bin:$PATH" # Git
PATH="/Users/kevin/anaconda/bin:$PATH" # Anaconda
export PATH

# Profile loading
function reloadprofile {
    source ~/.bashrc
}

# Git setup
source /usr/local/git/contrib/completion/git-completion.bash
source /usr/local/git/contrib/completion/git-prompt.sh
GIT_PS1_SHOWDIRTYSTATE=true

# SSH remote logins
function sshFoE {
    ssh $1@shell.foe.auckland.ac.nz
}

# Prompt Settings
function advprompt {
    export PS1='\u@\h \w$(__git_ps1)\$ '
}
function noprompt {
    export PS1='âž¦\$ '
}
advprompt

# Java shortcuts
alias jj="java -jar"
alias jc="java -cp"

# Maven Shortcuts
alias mvnq="mvn -q"
alias mvnp="mvn package"
alias mvnpq="mvnq package"

alias ..="cd .."
# Lock shortcut
function lock {
    /System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend
}


# Double clear
function cls {
    clear
    history -c
}

# Better ls
alias lsa='ls -plaTh'

# Redirect festival to MacOS say
function festival {
    say
}

# Get CPU Model
alias cpu_model='sysctl -n machdep.cpu.brand_string'


# Open up course folder
function uni {
    cd "`find "/Users/kevin/Google Drive/UoA/SE" -maxdepth 1 -name *"$@"`"
}
