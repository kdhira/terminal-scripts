# Author: Kevin Hira

# If not running interactively, don't do anything
#[[ $- != *i* ]] && return

# Colour stuff
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

# Reload profile
function reloadprofile {
    source ~/.bash_profile
}

# Git setup
source /usr/share/git/completion/git-completion.bash
source /usr/share/git/completion/git-prompt.sh

# Prompt settings
#PS1='[\u@\h \W]\$ '
export PS1='\u@\h \w$(__git_ps1)\$ '

# Java shortcuts
alias jj='java -jar'
alias jc='java -cp'

# Maven shortcuts
alias mvnq='mvn -q'
alias mvnp='mvn package'
alias mvnpq='mvnq package'
alias mvnqp='mvnpq'

# Go up directory
alias ..='cd ../'

# Double clear
alias cls='clear && history -c'

# Better ls
alias ls='ls --color=auto'
alias lsa='ls -palh'
