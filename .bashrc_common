# Colours for terminal
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

# PS1
PS1='\u@\h \w$(__git_ps1)\$ '

# Java shortcuts
alias jj='java -jar'
alias jc='java -cp'

# Maven shortcuts
alias mvnq='mvn -q'
alias mvnp='mvn package'
alias mvnpq='mvnq package'
alias mvnqp='mvnpq'

# Go up directory
alias ..='cd ../'

# Double clear
alias cls='clear && history -c'

# SSH remote logins
function sshFoE {
    ssh $1@shell.foe.auckland.ac.nz
}

